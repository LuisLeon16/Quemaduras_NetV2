<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="10dp"
    android:paddingVertical="120dp">

    <ImageView
        android:id="@+id/image_onboarding"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/title_onboarding"
        android:src="@drawable/ob1" />

    <TextView
        android:id="@+id/title_onboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/description_onboarding"
        android:text="@string/txt_title1"
        android:textAlignment="center"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/naranja_pastel"
        android:layout_marginBottom="10dp"
        android:textAllCaps="true"/>

    <TextView
        android:id="@+id/description_onboarding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/txt_description1"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:lineSpacingExtra="4dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>